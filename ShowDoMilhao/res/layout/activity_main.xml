<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/titulo"
    android:paddingTop="120dp"
    android:stretchColumns="1" >

	<TableRow
	    android:id="@+id/btn1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:focusable="true" >

		<RelativeLayout
		    android:layout_height="74dp"
		    android:layout_margin="2dp"
		    android:layout_weight="0.42" >

		    <ImageView
		        android:id="@+id/btniniciarjogo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentLeft="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="Botao Iniciar novo jogo"
		        android:maxHeight="50dp"
		        android:onClick="novoJogo"
		        android:paddingTop="0dp"
		        android:src="@layout/btnnovojogo" />

		</RelativeLayout>

	</TableRow>
   	
   	<TableRow
	    android:id="@+id/btn2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

		<RelativeLayout
		    android:layout_height="50dp"
		    android:layout_margin="2dp"
		    android:layout_weight="0.42" >

		    <ImageView
		        android:id="@+id/btnleaderboard"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="Botao Placar"
		        android:maxHeight="50dp"
		        android:onClick="leaderBoard"
		        android:paddingTop="0dp"
		        android:src="@drawable/btn2placar" />

		</RelativeLayout>

	</TableRow>
	
	<TableRow
	    android:id="@+id/btn3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

		<RelativeLayout
		    android:layout_height="50dp"
		    android:layout_margin="2dp"
		    android:layout_weight="0.42" >

		    <ImageView
		        android:id="@+id/btnsair"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="Botao Sair"
		        android:onClick="sair"
		        android:paddingTop="0dp"
		        android:src="@drawable/btn3sair" />

		</RelativeLayout>

	</TableRow>
